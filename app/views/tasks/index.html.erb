<%= link_to t('action.create'), new_task_path %>

<table border="1">
  <thead>
    <tr>
      <th><%= t('task.title') %></th>
      <th><%= t('task.content') %></th>
      <th>修改</th>
      <th>刪除</th>
    </tr>
  </thead>
  <tbody>  
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= link_to t('action.edit'), edit_task_path(task)  %></td>
        <td><%= link_to t('action.delete'), task_path(task), method: "delete", data: { confirm: t("message.are_you_sure_to_dalete") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
